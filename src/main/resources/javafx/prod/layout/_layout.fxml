<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1000.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.prod.layout.LayoutController">

                      <MenuBar minHeight="45.0" minWidth="-Infinity" opacity="0.8" prefHeight="45.0" prefWidth="1200.0" AnchorPane.topAnchor="0.0">
        <menus>
            <Menu mnemonicParsing="false" text="Locations">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showLocationAddScreen" text="Add" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Transactions">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showTransactionAddScreen" text="Add" />
                    <MenuItem mnemonicParsing="false" onAction="#showTransactionSearchScreen" text="Search" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Clients">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showClientAddScreen" text="Add" />
                    <MenuItem mnemonicParsing="false" onAction="#showClientSearchScreen" text="Search" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Projects">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showProjectAddScreen" text="Add" />
                    <MenuItem mnemonicParsing="false" onAction="#showProjectSearchScreen" text="Search" />
                </items>
            </Menu>


        </menus>
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
        </padding>
    </MenuBar>
   <Label id="balanceLabel" fx:id="AccountBalance" alignment="CENTER_RIGHT" layoutX="1200.0" prefHeight="45.0" prefWidth="300.0" text="Account Balance: " textAlignment="CENTER" />


</AnchorPane>
