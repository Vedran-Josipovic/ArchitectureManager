<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="javafx.prod.location.LocationAddController">

    <GridPane prefWidth="1500" prefHeight="1000">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <fx:include source="../layout/_layout.fxml"/>

        <Label text="Location Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="locationTypeComboBox" onAction="#handleLocationTypeChange" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Address"/>
                    <String fx:value="VirtualLocation"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Street:" fx:id="streetLabel" GridPane.rowIndex="1" GridPane.columnIndex="0" visible="false"/>
        <TextField fx:id="streetTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" visible="false"/>

        <Label text="House Number:" fx:id="houseNumberLabel" GridPane.rowIndex="2" GridPane.columnIndex="0" visible="false"/>
        <TextField fx:id="houseNumberTextField" GridPane.rowIndex="2" GridPane.columnIndex="1" visible="false"/>

        <Label text="City:" fx:id="cityLabel" GridPane.rowIndex="3" GridPane.columnIndex="0" visible="false"/>
        <TextField fx:id="cityTextField" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false"/>

        <Label text="Meeting Link:" fx:id="meetingLinkLabel" GridPane.rowIndex="4" GridPane.columnIndex="0" visible="false"/>
        <TextField fx:id="meetingLinkTextField" GridPane.rowIndex="4" GridPane.columnIndex="1" visible="false"/>

        <Label text="Platform:" fx:id="platformLabel" GridPane.rowIndex="5" GridPane.columnIndex="0" visible="false"/>
        <TextField fx:id="platformTextField" GridPane.rowIndex="5" GridPane.columnIndex="1" visible="false"/>

        <Button text="Save" onAction="#handleSave" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>

</VBox>
